<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashViewTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

    </style>

    <style name="AppTheme2" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#E4DDDD</item>
        <item name="colorPrimaryDark">#E4DDDD</item>
        <item name="colorAccent">#E4DDDD</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
