<resources>
    <!-- Base application theme. -->

    <style name="AppTheme2" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#E4DDDD</item>
        <item name="colorPrimaryDark">#E4DDDD</item>
        <item name="colorAccent">#E4DDDD</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="AppTheme4" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFC107</item>
        <item name="colorPrimaryDark">#FFC107</item>
        <item name="colorAccent">#FFC107</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme3" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#000000</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>


    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>

    </style>
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">#050505</item>
        <item name="colorPrimaryDark">#050505</item>
        <item name="colorAccent">#050505</item>
        <item name="borderlessButtonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
    </style>

    <style name="SplashViewTheme1" parent="Theme.MaterialComponents.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>


    </style>

    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">

        <item name="android:textColor">#E4DDDD</item>

        <item name="android:textSize">14sp</item>
    </style>




    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="CustomActivityAnimation2" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
        <item name="android:windowEnterAnimation">@anim/animate_slide_up_enter</item>
        <item name="android:windowExitAnimation">@anim/animate_slide_down_exit</item>
    </style>
    <style name="full_screen_dialog">

        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
        <item name="android:windowEnterAnimation">@anim/animate_slide_up_enter</item>
        <item name="android:windowExitAnimation">@anim/animate_slide_down_exit</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>


    <!--search bar-->

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">#ffff</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">#ffff</item>
        <item name="android:textColorHint">#A19B9B</item>


    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#ffff</item>
        <item name="colorControlActivated">#979292</item>
    </style>
    <style name="roundedImageView" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
    <style name="roundedImageView2" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#BAB2B2</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="color">#5C5454</item>
        <item name="startIconTint">#5C5454</item>

        <item name="android:textColorHint">#ffff</item>

    </style>
    <style name="TextInputLayoutStyle2" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#090909</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="color">#090909</item>
        <item name="android:textColorHint">#090909</item>
        <item name="boxBackgroundMode">outline</item>


    </style>
    <style name="TextInputLayoutStyle1" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#FFF9F9</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="color">#FFF9F9</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">#E4DDDD</item>
    </style>
    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FF200F</item>

    </style>




</resources>