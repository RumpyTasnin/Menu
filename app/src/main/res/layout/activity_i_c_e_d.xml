<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ICED"
    android:orientation="vertical"
    android:id="@+id/drawerlayout"
    android:background="@drawable/iced3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout"
        android:background="#63303030"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <include

                android:id="@+id/toolbar"
                layout="@layout/toolbar"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="14"
                >

                <TextView
                    android:id="@+id/iced"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="start"
                    android:layout_weight="1.1"
                    android:fontFamily="@font/limelight"
                    android:gravity="center_vertical"
                    android:text="ICED DRINKS"
                    android:textColor="#ffff"
                    android:textSize="30sp"
                    android:paddingLeft="20dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_weight="12.9"
                    android:background="@drawable/layout1"
                    android:layout_marginTop="10dp"
                    android:weightSum="35"
                    >



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclertext5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_weight="1"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="15dp"
                        android:paddingTop="15dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="330dp"
                            android:layout_height="200dp"
                            app:cardBackgroundColor="#63151414"
                            app:cardCornerRadius="15dp"
                            android:clipToPadding="true"
                            >

                            <LinearLayout
                                android:id="@+id/layout_card"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/transparent"
                                android:orientation="horizontal"
                                android:weightSum="8">

                                <ImageView
                                    android:id="@+id/image"
                                    android:layout_width="150dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="20dp"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/mint"
                                    android:paddingLeft="16dp"
                                    android:paddingRight="14dp"
                                    android:layout_marginBottom="20dp"/>



                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:layout_weight="7"
                                    android:weightSum="5"
                                    android:gravity="bottom"
                                    android:paddingBottom="20dp"
                                    android:paddingTop="20dp"

                                    >
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:text="Moroccan Mint"
                                        android:layout_weight="1"
                                        android:textColor="#fff"
                                        android:textSize="22sp"
                                        android:layout_marginTop="-85dp"
                                        android:fontFamily="sans-serif-condensed-medium"
                                        />
                                    <TextView

                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:text="Iced tea made with moroccan mint leaves"
                                        android:layout_weight="2"
                                        android:textColor="#fff"
                                        android:fontFamily="sans-serif-condensed"
                                        android:textSize="13sp"
                                        />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:orientation="horizontal"
                                        android:layout_weight="2"
                                        android:weightSum="5"
                                        android:gravity="bottom"
                                        android:layout_marginBottom="-60dp"
                                        >
                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="3"
                                            android:weightSum="2"
                                            android:orientation="vertical"
                                            >
                                            <TextView
                                                android:id="@+id/small"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textSize="14sp"
                                                android:textColor="#fff"
                                                android:text="REGULAR  "
                                                android:gravity="start"
                                                android:layout_weight="1"
                                                android:fontFamily="sans-serif-condensed"
                                                android:layout_marginBottom="-20dp"


                                                />
                                            <TextView
                                                android:id="@+id/large"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textSize="14sp"
                                                android:textColor="#fff"
                                                android:gravity="start"
                                                android:text="LARGE"
                                                android:fontFamily="sans-serif-condensed"
                                                android:layout_weight="1" />

                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:orientation="vertical"

                                            android:weightSum="2">
                                            <TextView
                                                android:id="@+id/price"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textSize="14sp"
                                                android:textColor="#fff"
                                                android:text="175 Tk"
                                                android:gravity="start"
                                                android:fontFamily="sans-serif-condensed-medium"
                                                android:layout_weight="1"
                                                android:layout_marginBottom="-20dp"

                                                />
                                            <TextView
                                                android:id="@+id/price2"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textSize="14sp"
                                                android:textColor="#fff"
                                                android:gravity="start"
                                                android:text="300 Tk"
                                                android:layout_weight="1"
                                                android:fontFamily="sans-serif-condensed-medium" />

                                        </LinearLayout>

                                    </LinearLayout>




                                </LinearLayout>
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="330sp"
                            android:layout_height="200sp"
                            app:cardBackgroundColor="#63151414"
                            android:layout_marginTop="15dp"
                            app:cardCornerRadius="15dp"
                            android:clipToPadding="true"

                            >

                            <LinearLayout
                                android:id="@+id/layout_card2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/transparent"
                                android:orientation="horizontal"
                                android:weightSum="8">

                                <ImageView

                                    android:layout_width="150dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="20dp"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/lemon"
                                    android:paddingLeft="16dp"
                                    android:paddingRight="14dp"
                                    android:layout_marginBottom="20dp"/>



                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:layout_weight="7"
                                    android:weightSum="10"
                                    android:gravity="bottom"
                                    android:paddingBottom="20dp"
                                    android:paddingTop="20dp"

                                    >
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:text="Lemon Raz"
                                        android:layout_weight="3"
                                        android:textColor="#fff"
                                        android:textSize="22sp"
                                        android:layout_marginTop="-115dp"
                                        android:fontFamily="sans-serif-condensed-medium"
                                        />
                                    <ScrollView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="3">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="Enjoy the light refreshing taste of Lemon and Raspberry in our Bariatric Health and Wellness Lemon Razzy drink"
                                            android:textColor="#fff"
                                            android:textSize="13sp"

                                            />
                                    </ScrollView>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:orientation="horizontal"
                                        android:layout_weight="4"
                                        android:weightSum="5"
                                        android:gravity="bottom"
                                        android:layout_marginBottom="-180dp"
                                        android:layout_marginTop="30dp"
                                        >
                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="3"
                                            android:weightSum="2"
                                            android:orientation="vertical"
                                            >
                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textSize="14sp"
                                                android:textColor="#fff"
                                                android:text="REGULAR  "
                                                android:gravity="start"
                                                android:layout_weight="1"
                                                android:layout_marginBottom="-20dp"
                                                android:fontFamily="sans-serif-condensed"


                                                />
                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textSize="14sp"
                                                android:textColor="#fff"
                                                android:gravity="start"
                                                android:text="LARGE"
                                                android:fontFamily="sans-serif-condensed"
                                                android:layout_gravity="bottom"
                                                android:layout_weight="1" />

                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:orientation="vertical"

                                            android:weightSum="2">
                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textSize="14sp"
                                                android:textColor="#fff"
                                                android:text="175 Tk"
                                                android:gravity="start"
                                                android:fontFamily="sans-serif-condensed-medium"
                                                android:layout_weight="1"
                                                android:layout_marginBottom="-20dp"

                                                />
                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textSize="14sp"
                                                android:textColor="#fff"
                                                android:gravity="start"
                                                android:text="300 Tk"
                                                android:layout_weight="1"
                                                android:fontFamily="sans-serif-condensed-medium"/>

                                        </LinearLayout>

                                    </LinearLayout>




                                </LinearLayout>
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                    </LinearLayout>





                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#101010"
        android:backgroundTint="#171717">
        <include

            android:id="@+id/navigation_drawer"
            layout="@layout/navigation_drawer"/>

    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>